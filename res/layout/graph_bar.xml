<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_graph_root"
    android:layout_width="332dp"
    android:layout_height="236dp"
    android:layout_marginTop="8dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="08월 28일"
        android:textColor="#0065a2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_date"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="kcal"
        android:textColor="#9e9e9e"
        android:textSize="12sp" />

    <com.echo.holographlibrary.BarGraph
        android:id="@+id/bargraph"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp" />

    <RelativeLayout
        android:id="@+id/rl_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tv_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#78adcc"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#78adcc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tooltip"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp" />

